<label for="<?php echo $this->getFieldId('gender')?>"<?php if ($this->isRequired()) echo ' class="required"' ?>><?php if ($this->isRequired()) echo '<em>*</em>' ?><?php echo $this->__('Gender') ?></label>
<div class="input-box">
    <ul style=" padding-left: 20px; ">
<?php $options = Mage::getResourceSingleton('customer/customer')->getAttribute('gender')->getSource()->getAllOptions();?>
<?php $value = $this->getGender();?>
<?php foreach ($options as $option):?>
    <?php if($this->isRequired() && !$option['value']) : continue; endif;?>
    <li class="control" style="float: left; margin-right: 20px;">
        <div class="input-box" style="vertical-align: text-bottom;"><input type="radio" name="<?php echo $this->getFieldName('gender')?>" id="<?php echo $this->getFieldId('gender') . $option['value']?>" value="<?php echo $option['value'] ?>"<?php if ($option['value'] == $value) echo ' checked="checked"' ?>/></div>
        <label for="<?php echo $this->getFieldId('gender') . $option['value']?>"><?php if($option['value']) :?><?php echo $this->__($option['label']) ?><?php else: echo $this->__('no selection')?><?php endif;?></label>
    </li>
<?php endforeach;?>
    </ul>
</div>
