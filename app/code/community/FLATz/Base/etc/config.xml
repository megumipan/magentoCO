            <directory_resource>
                <rewrite>
                    <region_collection>FLATz_Base_Model_Resource_Directory_Region_Collection</region_collection>
                </rewrite>
            </directory_resource>
            <flatz_base>
                <class>FLATz_Base_Model</class>
