        <fieldsets>
            <sales_copy_order>
                <customer_firstname>
                    <to_edit>*</to_edit>
                </customer_firstname>
                <customer_lastname>
                    <to_edit>*</to_edit>
                </customer_lastname>
                <remote_ip>
                    <to_edit>*</to_edit>
                </remote_ip>
                <customer_dob>
                    <to_edit>*</to_edit>
                </customer_dob>
                <customer_gender>
                    <to_edit>*</to_edit>
                </customer_gender>
            </sales_copy_order>
            <sales_copy_order_billing_address>
                <firstnamekana>
                    <to_order>*</to_order>
                </firstnamekana>
                <lastnamekana>
                    <to_order>*</to_order>
                </lastnamekana>
            </sales_copy_order_billing_address>
            <sales_copy_order_shipping_address>
                <firstnamekana>
                    <to_order>*</to_order>
                </firstnamekana>
                <lastnamekana>
                    <to_order>*</to_order>
                </lastnamekana>
            </sales_copy_order_shipping_address>
            <sales_convert_quote>
