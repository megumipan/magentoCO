                    <customer_totals_collection>FLATz_Base_Model_Resource_Reports_Customer_Totals_Collection</customer_totals_collection>
                    <review_customer_collection>FLATz_Base_Model_Resource_Reports_Review_Customer_Collection</review_customer_collection>
