                    <to_order>*</to_order>
                </customer_firstnamekana>
                <customer_lastnamekana>
                    <to_order>*</to_order>
                </customer_lastnamekana>
            </sales_convert_quote>
            <sales_convert_quote_address>
                <firstnamekana>
                    <to_order_address>*</to_order_address>
                    <to_customer_address>*</to_customer_address>
                </firstnamekana>
                <lastnamekana>
                    <to_order_address>*</to_order_address>
                    <to_customer_address>*</to_customer_address>
                </lastnamekana>
            </sales_convert_quote_address>
            <sales_convert_order_address>
                <firstnamekana>
                    <to_quote_address>*</to_quote_address>
                </firstnamekana>
                <lastnamekana>
                    <to_quote_address>*</to_quote_address>
                </lastnamekana>
            </sales_convert_order_address>
            <customer_account>
                <firstnamekana>
                    <to_quote>customer_firstnamekana</to_quote>
                    <create>1</create>
                    <update>1</update>
                    <name>1</name>
                </firstnamekana>
                <lastnamekana>
                    <to_quote>customer_lastnamekana</to_quote>
                    <create>1</create>
                    <update>1</update>
                    <name>1</name>
                </lastnamekana>
            </customer_account>
            <customer_address>
                <firstnamekana>
                    <to_quote_address>*</to_quote_address>
                </firstnamekana>
                <lastnamekana>
                    <to_quote_address>*</to_quote_address>
                </lastnamekana>
            </customer_address>
            <checkout_onepage_billing>
                <firstnamekana>
                    <to_customer>*</to_customer>
                </firstnamekana>
                <lastnamekana>
                    <to_customer>*</to_customer>
                </lastnamekana>
            </checkout_onepage_billing>
            <checkout_onepage_quote>
                <customer_firstnamekana>
                    <to_customer>firstnamekana</to_customer>
                </customer_firstnamekana>
                <customer_lastnamekana>
                    <to_customer>lastnamekana</to_customer>
                </customer_lastnamekana>
            </checkout_onepage_quote>
        </fieldsets>
        <events>
            <controller_action_predispatch_customer_address_formPost>
                <observers>
                    <validator>
                        <class>FLATz_Base_Model_Observer</class>
                        <method>modifyPostData</method>
                    </validator>
                </observers>
            </controller_action_predispatch_customer_address_formPost>
            <controller_action_predispatch_customer_account_createpost>
                <observers>
                    <validator>
                        <class>FLATz_Base_Model_Observer</class>
                        <method>modifyPostData</method>
                    </validator>
                </observers>
            </controller_action_predispatch_customer_account_createpost>
            <controller_action_predispatch_checkout_onepage_saveBilling>
                <observers>
                    <validator>
                        <class>FLATz_Base_Model_Observer</class>
                        <method>modifyPostData</method>
                    </validator>
                </observers>
            </controller_action_predispatch_checkout_onepage_saveBilling>
            <controller_action_predispatch_checkout_onepage_saveShipping>
                <observers>
                    <validator>
                        <class>FLATz_Base_Model_Observer</class>
                        <method>modifyPostData</method>
                    </validator>
                </observers>
            </controller_action_predispatch_checkout_onepage_saveShipping>
            <controller_action_predispatch_paypal_express_updateOrder>
                <observers>
                    <validator>
                        <class>FLATz_Base_Model_Observer</class>
                        <method>modifyPostData</method>
                    </validator>
                </observers>
            </controller_action_predispatch_paypal_express_updateOrder>
            <!-- 管理画面メニューの ActiveMenuの設定 -->
            <controller_action_layout_render_before>
                <observers>
                    <flatz_base_observer>
                        <type>singleton</type>
                        <class>flatz_base/observer</class>
                        <method>setActiveMenu</method>
                    </flatz_base_observer>
                </observers>               
            </controller_action_layout_render_before> 
            <!-- 管理画面のダウンロードの翻訳もれ対応 -->
            <adminhtml_block_html_before>
                <observers>
                    <flatz_base_observer_set_template>
                        <type>singleton</type>
                        <class>flatz_base/observer</class>
                        <method>setTemplate</method>
                        <args>
                            <Mage_Adminhtml_Block_Catalog_Product_Attribute_Edit_Tab_Options>flatz_base/catalog/product/attribute/options.phtml</Mage_Adminhtml_Block_Catalog_Product_Attribute_Edit_Tab_Options>
                            <Mage_Adminhtml_Block_Media_Uploader>flatz_base/media/uploader.phtml</Mage_Adminhtml_Block_Media_Uploader>
                            <Mage_Downloadable_Block_Adminhtml_Catalog_Product_Edit_Tab_Downloadable_Links>flatz_base/downloadable/product/edit/downloadable/links.phtml</Mage_Downloadable_Block_Adminhtml_Catalog_Product_Edit_Tab_Downloadable_Links>
                            <Mage_Downloadable_Block_Adminhtml_Catalog_Product_Edit_Tab_Downloadable_Samples>flatz_base/downloadable/product/edit/downloadable/samples.phtml</Mage_Downloadable_Block_Adminhtml_Catalog_Product_Edit_Tab_Downloadable_Samples>
                        </args>
                    </flatz_base_observer_set_template>
                </observers>                              
            </adminhtml_block_html_before>
        </events>
        <pdf>
            <invoice>
                <default>flatz_base/sales_order_pdf_items_invoice_default</default>
            </invoice>
            <shipment>
                <default>flatz_base/sales_order_pdf_items_shipment_default</default>
            </shipment>
            <creditmemo>
                <default>flatz_base/sales_order_pdf_items_creditmemo_default</default>
            </creditmemo>
