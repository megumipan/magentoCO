<?xml version="1.0" encoding="UTF-8"?>

<config>
    <modules>
        <FLATz_Postcodetoaddress>
            <version>0.1.0</version>
        </FLATz_Postcodetoaddress>
    </modules>
    <global>
        <helpers>
            <postcodetoaddress>
                <class>FLATz_Postcodetoaddress_Helper</class>
            </postcodetoaddress>
        </helpers>
        <models>
            <postcodetoaddress>
                <class>FLATz_Postcodetoaddress_Model</class>
            </postcodetoaddress>
        </models>
        <resources>
            <postcodetoaddress_setup>
                <setup>
                    <module>FLATz_Postcodetoaddress</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
                <connection><use>core_setup</use></connection>
            </postcodetoaddress_setup>
            <postcodetoaddress_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </postcodetoaddress_write>
            <postcodetoaddress_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </postcodetoaddress_read>
        </resources>
        <blocks>
            <postcodetoaddress>
                <class>FLATz_Postcodetoaddress_Block</class>
            </postcodetoaddress>
        </blocks>
    </global>
    <frontend>
        <routers>
            <postcodetoaddress>
                <use>standard</use>
                <args>
                    <module>FLATz_Postcodetoaddress</module>
                    <frontName>postcodetoaddress</frontName>
                </args>
            </postcodetoaddress>
        </routers>
        <layout>
            <updates>
                <postcodetoaddress>
                    <file>flatz_postcodetoaddress.xml</file>
                </postcodetoaddress>
            </updates>
        </layout>
        <translate>
            <modules>
                <FLATz_Postcodetoaddress>
                    <files>
                        <default>FLATz_Postcodetoaddress.csv</default>
                    </files>
                </FLATz_Postcodetoaddress>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <FLATz_Postcodetoaddress>
                    <files>
                        <default>FLATz_Postcodetoaddress.csv</default>
                    </files>
                </FLATz_Postcodetoaddress>
            </modules>
        </translate>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <postcodetoaddress translate="title" module="postcodetoaddress">
                                            <title>Postcode To Address</title>
                                            <sort_order>100</sort_order>
                                        </postcodetoaddress>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <default>
        <postcodetoaddress>
            <settings>
                <request_url>http://api.flatz.jp/zip2addr/%s</request_url>
            </settings>
        </postcodetoaddress>    
    </default>
</config>
